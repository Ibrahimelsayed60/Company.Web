@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div asp-validation-summary="All" class="text-danger"></div>


<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignUp">
			<input class="text" asp-for="FirstName" placeholder="Your First Name" required="">
			<span asp-validation-for="FirstName" class="text-danger"></span>
			<br />

			<input class="text" asp-for="LastName" placeholder="Your Last Name" required="">
			<span asp-validation-for="LastName" class="text-danger"></span>
			<br />

			<input class="text" asp-for="Email" placeholder="Email" required="">
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />

			<input class="text" type="password" asp-for="Password" placeholder="Password" required="">
			<span asp-validation-for="Password" class="text-danger"></span>
			<br />
			
			<input class="text" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			<br />

			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsActive" class="checkbox">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Do you have an Account? <a asp-action="SignIn"> Login Now!</a></p>
	</div>
</div>

@section ValidationScriptSection
{
	<partial name="_ValidationScriptsPartial" />
}